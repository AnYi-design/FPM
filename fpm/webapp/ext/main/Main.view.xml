<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns="sap.m" xmlns:macros="sap.fe.macros" xmlns:macrosTable="sap.fe.macros.table" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="fpm.fpm.ext.main.Main">
    <f:DynamicPage id="idDynamicPage">
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <Title text="Group" level="H1"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="idDynamicPageHeader">
                <macros:FilterBar id="idFilterBar" metaPath="/PARENTGROUP/@com.sap.vocabularies.UI.v1.SelectionFields"/>
               	<SegmentedButton
                    id="CustomSegmentedButton"
                    selectionChange=".onRatingChoicesSelectionChange"
                >
                    <items>
                        <SegmentedButtonItem key="none" text="None" />
                        <SegmentedButtonItem key="bad" text="Bad" />
                        <SegmentedButtonItem key="okay" text="Okay" />
                        <SegmentedButtonItem key="good" text="Good" />
                    </items>
                </SegmentedButton> 
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <macros:Table selectionMode="ForceMulti" id="idTable" metaPath="/PARENTGROUP/@com.sap.vocabularies.UI.v1.LineItem" filterBar="idFilterBar" readOnly="true" enableFullScreen="true" rowCountMode="Auto" condensedTableLayout="true" disableColumnFreeze="true" disableCopyToClipboard="true" enableAutoColumnWidth="true" enableSelectAll="true" enablePastingOfComputedProperties="true">
                <macros:columns>
                    <macrosTable:Column key="CCKey" header="CC" width="4rem" importance="High">
                        <Text text="CC"/>
                    </macrosTable:Column>
                    <macrosTable:Column key="ss" header="Button" width="10rem" importance="High">
                        <core:Fragment fragmentName="fpm.fpm.ext.custombutton.CustomButton" type="XML"/>
                    </macrosTable:Column>
                    <macrosTable:Column key="Test02" header="ButtonTest02" width="15rem" importance="Low">
                        <Button text="{='Custom Column Test02' + %{GroupId}}" press=".onButtonTest02Press"/>
                    </macrosTable:Column>
                    <macrosTable:Column key="changeall" header="Change All" width="4rem" importance="High">
                        <Input name="changeallname"/>
                    </macrosTable:Column>
                </macros:columns>
                <macros:actions>
                    <macrosTable:Action key="customAction" text="My Custom Action" press="onPressAction" requiresSelection="true" placement="Before" anchor="customActionGroup"/>
                    <macrosTable:ActionGroup text="Grouped Actions" placement="Before" key="customActionGroup" id="idDialog" anchor="DataFieldForAction::com.sap.gateway.srvd.ycx_sd_group.v0001.Activate">
                        <macrosTable:Action text="Menu Action 1" press=".onPressMenuAction" key="action1"/>
                        <macrosTable:Action text="Menu Action 2" press=".onPressMenuAction" enabled="false" key="action2"/>
                    </macrosTable:ActionGroup>
                </macros:actions>
            </macros:Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>